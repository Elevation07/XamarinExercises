                    Margin="0,5,0,0" 
                    VerticalOptions="Center" 
                    Clicked="Button_Clicked"
                     StyleId ="3"/>
            <Button Text="Profile Page" 
                    Margin="0,5,0,0" 
                    VerticalOptions="Center" 
                    Clicked="Button_Clicked"
                     StyleId ="4"/>
            <Button Text="Second Page" 
                    Margin="0,5,0,0" 
                    VerticalOptions="Center" 
                    Clicked="Button_Clicked"
                     StyleId ="5"/>
            <Button Text="Behavior" 
                    Margin="0,5,0,0" 
