             mc:Ignorable="d"
             x:Class="XamarinExercise1.MainPage"
             Title="Main Page">

    <ContentPage.Content>
        <StackLayout >
            
            
            <Label Text=" Welcome to Xamarin.Forms!"
                   HorizontalOptions="Center" 
                   Margin="0,20,0,10" 
                   FontSize="25"
                   />
            
            <Button Text="STACKLAYOUT - BASIC" 
                    Margin="0,5,0,0" 
                    VerticalOptions="Center" 
